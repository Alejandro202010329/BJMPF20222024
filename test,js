const assert = require('chai').assert;
const request = require('supertest');

const url = 'https://YOUR_GITHUB_USERNAME.github.io/hola-mundo-github-pages'; // Reemplaza con tu nombre de usuario de GitHub

describe('Página web Hola Mundo', () => {
    it('debería mostrar el título Hola Mundo', async () => {
        const response = await request(url).get('/');
        assert.equal(response.status, 200);
        assert.include(response.text, '<h1>¡Hola Mundo!</h1>');
    });
});